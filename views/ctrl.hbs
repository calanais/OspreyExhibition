<script>
$(document).ready(function(){
    $("img").click(function(){
      var img = $(this).parent().attr('id')
        $.get("//localhost:3000/image/"+img, function(data, status){
            console.log("Data: " + data + "\nStatus: " + status);
        });
    });
});
</script>
